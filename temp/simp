#include <unistd.h>
#include <stdlib.h>
#include <string.h>

#define input_size 1024

void write_string(const char *str)
{
write(STDOUT_FILENO, str, strlen(str));
}

void shell()
{
char input[input_size];
while (1)
{
write_string("$ ");
if (fgets(input, input_size, stdin) == NULL)
{
write_string("\nExiting shell.\n");
break;
}
input[strcspn(input, "\n")] = '\0';
if system(input) == -1)
write_string("Error executing command\n");
}
}
int main() {
shell();
return (0);
}
